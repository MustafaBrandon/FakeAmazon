@{
}

@model IEnumerable<string>


<h6>Select a Category</h6>
<div class="text-center d-grid gap-2">
    <a class="btn btn-outline-secondary m-1 text-center" asp-controller="Home" asp-action="Index" asp-route-category="">All</a>
    <br />
    @foreach (string t in Model)
    {
        <a class=@(ViewBag.SelectedType == t? " btn btn-primary btn-outline-primary  m-1 text-center" : "btn btn-outline-secondary m-1 text-center") 
           asp-controller="Home" asp-action="Index" asp-route-category="@t" asp-route-pageNum="1">@t</a>
        <br />
    }
</div>
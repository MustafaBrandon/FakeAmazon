@{
}

@model Book


<div class="card m-1 p-1">
    <div class="bg-light p-1">
        <h4 class="fw-bold">@Model.Title</h4>
        <span class="badge btn-secondary">@Model.Category</span>
    </div> 
    <ul>

        <li class="fst-italic">Author: @Model.Author</li>
        <li>Published by @Model.Publisher</li>
        <li>ISBN @Model.Isbn</li>
        <li>@Model.PageCount pages</li>
        @*<li>Category: @Model.Category</li>*@
        <li>@Model.Classification</li>
        <li class="text-danger">$@Model.Price</li>
    </ul>
    <form method="post" asp-page="/Cart">
        <input type="hidden" @*asp-for="BookId"*@ name="BookId" value="@Model.BookId" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-left">Add to Cart</button>
        </span>
    </form>
</div>
@inherits LayoutComponentBase
    <link href="~/lib/bootstrap-5.1.3/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap-5.1.3/dist/css/bootstrap-utilities.css" rel="stylesheet" />
    <div class="bg-info text-white p-2">

        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <span class="navbar-brand m-lg-2">Amazon Administration</span>
                </div>
                <div class="col-2 text-right">
                    <a class="btn btn-sm btn-primary" href="/account/logout">Log Out</a>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid bg-secondary">
        <div class="row p-2 ">
            <div class="col-3">
                <div class="d-grid gap-2">
                    <NavLink class="btn btn-primary" href="/admin/books" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">
                        Books
                    </NavLink>
                    <NavLink class="btn btn-primary" href="/admin/purchases" ActiveClass="btn-primary text-white" Match="NavLinkMatch.Prefix">
                        Purchases
                    </NavLink>
                </div>
            </div>

            <div class="col navbar-fixed-bottom">
                @Body
            </div>
        </div>
    </div>
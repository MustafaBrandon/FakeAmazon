@page "/admin/books/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-striped table-bordered">
    <tbody>
        <tr>
            <th>Book Id:</th>
            <td>@book.BookId</td>
        </tr>
        <tr>
            <th>Book title:</th>
            <td>@book.Title</td>
        </tr>
        <tr>
            <th>Author:</th>
            <td>@book.Author</td>
        </tr>
        <tr>
            <th>Category:</th>
            <td>@book.Category</td>
        </tr>
        <tr>
            <th>ISBN:</th>
            <td>@book.Isbn</td>
        </tr>
        <tr>
            <th>Page Count:</th>
            <td>@book.PageCount</td>
        </tr>
        <tr>
            <th>Price:</th>
            <td>@book.Price</td>
        </tr>
        <tr>
            <th>Publisher:</th>
            <td>@book.Publisher</td>
        </tr>
        <tr>
            <th>Classification:</th>
            <td>@book.Classification</td>
        </tr>
    </tbody>

</table>

<NavLink class="btn btn-danger" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>

@code {
    [Inject]
    public IBookstoreRepository repo { get; set; }
    [Parameter]
    public long Id { get; set; }
    public Book book { get; set; }
    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookId == Id);
    }

    public string EditUrl => $"/admin/projects/edit/{book.BookId}";

}
